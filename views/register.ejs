<!DOCTYPE html>
<html>
  <head>
    <title>Register New User</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Syahid's Simple Express Demo</h1>
    <h2>Register New User</h2>
    <% if (typeof messages !== 'undefined' && messages !== null) {  %>    
      <p style="color:red"><%= messages.warning %></p>    
    <% } %> 

    <div>
      <form action="/auth/register" method="post">
        <div>
          <label for="firstName">First Name :</label>
          <input type="text" name="firstName" id="firstName" value="<%= (typeof user !== 'undefined' && user !== null) ? user.firstName : '' %>">
        </div>
        <div>
          <label for="lastname">Last Name :</label>
          <input type="text" name="lastName" id="lastName" value="<%= (typeof user !== 'undefined' && user !== null) ? user.lastName : '' %>"><br>
        </div>  
        <div>
          <label for="username">Login name :</label>
          <input type="text" name="username" id="username" value="<%= (typeof user !== 'undefined' && user !== null) ? user.username : '' %>"><br>
        </div>

        <div>
          <label for="password">Password :</label>
          <input type="password" name="password" id="password"><br>
        </div>

        <div>
          <label for="email">E-Mail :</label>
          <input type="email" name="email" id="email" value="<%= (typeof user !== 'undefined' && user !== null) ? user.email : '' %>">
        </div>
        <div>
          <p>Gender :</p>
          <input type="radio" name="gender" id="male" value="male" <%= (typeof user !== 'undefined' && user !== null) ? (user.gender === 'male' ? 'checked' : '') : 'checked' %>>
          <label for="male">Male</label><br>
          <input type="radio" name="gender" id="female" value="female" <%= (typeof user !== 'undefined' && user !== null) ? (user.gender === 'female' ? 'checked' : '') : '' %>>
          <label for="female">Female</label><br>
        </div>
        <div>
          <label for="course">Course :</label>
          <select name="course" id="course">
            <!-- <option value="none" selected disabled hidden>Select an Option</option> -->
            <option <%= (typeof user !== 'undefined' && user!==null) ? (user.course === 'DCD' ? 'selected' : '') : 'selected' %> value="DCD">DCD</option>
            <option <%= (typeof user !== 'undefined' && user!==null) ? (user.course === 'DCS' ? 'selected' : '') : '' %>   value="DCS">DCS</option>
            <option <%= (typeof user !== 'undefined' && user!==null) ? (user.course === 'DEC' ? 'selected' : '') : '' %>   value="DEC">DEC</option>
            <option <%= (typeof user !== 'undefined' && user!==null) ? (user.course === 'DIA' ? 'selected' : '') : '' %>  value="DIA">DIA</option>
          </select>
        </div>
        <div>
          <button type="submit">Register</button>
        </div>
      </form>
    </div>
    <div> 
      <h5><a href="/">Home</a></h5>
    </div>
  </body>
</html>